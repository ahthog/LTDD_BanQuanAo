<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của ProgressBar -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Nền trong suốt -->
            <stroke android:width="2dp" android:color="#ffffff" /> <!-- Viền trắng -->
            <corners android:radius="16dp" /> <!-- Bo góc 16dp -->
        </shape>
    </item>
    <!-- Màu tiến trình của ProgressBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" /> <!-- Màu của tiến trình (trắng) -->
                <corners android:radius="16dp" /> <!-- Bo góc 16dp -->
            </shape>
        </clip>
    </item>
</layer-list>
