                <TextView
                    android:id="@+id/tong_tien2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.226.000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

