<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagemathang1"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/mathang1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"> <!-- LinearLayout bên trong để chứa TextView và Spinner theo chiều dọc -->

            <TextView
                android:id="@+id/tenmathang1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Dress Fish"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sizemathang1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Size M"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp">

            <TextView
                android:id="@+id/delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_marginStart="90dp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:layout_marginTop="13dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tong_tien1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.226.000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>