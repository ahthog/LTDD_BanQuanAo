<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F1F1F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#F1F1F1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cart"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <!-- Khung hình ảnh người dùng với bo góc -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:contentDescription="Hình ảnh người dùng" />

        <!-- Tên người dùng, đậm và màu sắc nổi bật -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minh Anh"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Quận 1, TP.HCM"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_below="@id/textViewName"
            android:layout_marginTop="8dp" />

        <!-- Tài khoản -->
        <TextView
            android:id="@+id/textViewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản: 1000 VND"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_below="@id/textViewAddress"
            android:layout_marginTop="8dp" />

        <!-- Thông báo -->
        <TextView
            android:id="@+id/textViewNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo: Bạn có 3 thông báo mới."
            android:textSize="14sp"
            android:textColor="#FF6200EE"
            android:layout_below="@id/textViewAccount"
            android:layout_marginTop="8dp" />

        <!-- Nút "Đăng xuất" với màu sắc nổi bật và bo góc -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đăng xuất"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/black"
            android:layout_below="@id/textViewNotifications"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true" />

        <!-- Phần Lịch sử mua hàng -->
        <TextView
            android:id="@+id/textViewOrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử mua hàng"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_below="@id/buttonLogout"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

        <!-- Danh sách các trạng thái đơn hàng -->
        <LinearLayout
            android:id="@+id/orderStatusList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/textViewOrderHistory"
            android:layout_marginTop="16dp">

            <!-- Đơn hàng chờ xác nhận -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng chờ xác nhận"
                android:textSize="14sp"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="start|center_vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <!-- Đơn hàng đang giao -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng đang giao"
                android:textSize="14sp"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="start|center_vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <!-- Đơn hàng đã nhận -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng đã nhận"
                android:textSize="14sp"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="start|center_vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <!-- Đơn hàng đã hủy -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng đã hủy"
                android:textSize="14sp"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="start|center_vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <!-- Đơn hàng hoàn trả -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng hoàn trả"
                android:textSize="14sp"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="start|center_vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>