<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="DatHang.PhuongThucTT1Fragment">

        <FrameLayout
            android:id="@+id/custom_header"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/border"
                    android:orientation="vertical"> <!-- Đặt hướng dọc cho LinearLayout chính -->


                    <TextView
                        android:id="@+id/tieude1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="30sp"
                        android:layout_marginEnd="120dp"
                        android:text="Phương thức thanh toán"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cart_icon1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/pay" />

                        <TextView
                            android:id="@+id/nhapdiachi1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Thanh toán khi nhận hàng"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/thanhtoankhinhan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="30dp"/>

                    </LinearLayout>

                    <!-- Liên kết ngân hàng -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/cart_icon2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/ic_payment_30" />

                        <TextView
                            android:id="@+id/nhapdiachi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-10dp"
                            android:text="Liên kết ngân hàng"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/lienketnganhang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-5dp"
                            android:layout_marginStart="86dp"/>

                    </LinearLayout>

                    <!-- Momo -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/cart_icon3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginBottom="25dp"
                            app:srcCompat="@drawable/momo" />

                        <TextView
                            android:id="@+id/nhapdiachi3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-10dp"
                            android:text="Momo"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/momo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="185dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/tongcong2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng cộng"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/sotien2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="170dp"
                        android:text="6.675.000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/tongcong3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giảm giá"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/sotien3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="198dp"
                        android:text="150.000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/tongcong4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phí vận chuyển"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/sotien4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="157dp"
                        android:text="50.000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/tongcong5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành tiền"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/sotien5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="165dp"
                        android:text="6.575.000"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

</FrameLayout>
