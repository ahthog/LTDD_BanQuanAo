<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/product1"
            android:layout_marginBottom="16dp"/>

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/product_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Đánh giá sao -->
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_light"
            android:rating="4.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:secondaryProgressTint="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

        <!-- Màu sắc sản phẩm -->
        <TextView
            android:id="@+id/product_detail_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="Màu sắc sản phẩm"/>

        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/product_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm..."
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <!-- Button chọn kích cỡ sản phẩm -->
        <LinearLayout
            android:id="@+id/sizeContainer"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Kích cỡ sản phẩm -->
            <TextView
                android:id="@+id/productSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Kích cỡ"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Button M -->
            <Button
                android:id="@+id/sizeM"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="5dp"

                android:backgroundTint="@color/white"
                android:text="M"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Button L -->
            <Button
                android:id="@+id/sizeL"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="5dp"

                android:backgroundTint="@color/white"
                android:text="L"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Button XL -->
            <Button
                android:id="@+id/sizeXL"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="5dp"

                android:backgroundTint="@color/white"
                android:text="XL"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/product_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 1,000,000 VND"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <!-- Button Giỏ hàng -->
        <ImageButton
            android:id="@+id/addToCartBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cart"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Add to Cart" />

        <!-- Kích cỡ đã chọn -->
        <TextView
            android:id="@+id/sizeSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
