<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/producthree"/>

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Đánh giá sao -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numStars="5"
            android:rating="4.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:progressTint="@android:color/holo_orange_light"
            android:secondaryProgressTint="@android:color/darker_gray"/>

        <!-- Màu sắc sản phẩm -->
        <TextView
            android:id="@+id/productColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm..."
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <!-- Button chọn kích cỡ sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Kích cỡ sản phẩm -->
            <TextView
                android:id="@+id/productSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Kích cỡ"
                android:textStyle="bold"/>

            <!-- Button M -->
            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="M"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_conner"/>

            <!-- Button L -->
            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="L"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_conner"/>

            <!-- Button XL -->
            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="XL"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_conner"/>
        </LinearLayout>

        <!-- Giá sản phẩm (hiển thị bên dưới các button kích cỡ) -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="start"/>

        <!-- Button Giỏ hàng (hiển thị ở gần phía dưới) -->

        <ImageButton
            android:id="@+id/addToCartBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cart"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Add to Cart" />


        <TextView
            android:id="@+id/sizeSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
